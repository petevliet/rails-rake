<div class="page-header">
  <h1>Products</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>price</th>
      <th>color</th>
      <th>size</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td><%= product.color %></td>
        <td><%= product.size %> cm<sup>2</sup></td>
      </tr>
    <% end %>
  </tbody>
</table>
